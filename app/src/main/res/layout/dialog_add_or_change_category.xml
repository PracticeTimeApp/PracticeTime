<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/categoryDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/addCategoryDialogTitle"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="28sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/addCategoryDialogName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:ems="12"
        android:hint="@string/addCategoryDialogNameHint"
        android:inputType="textPersonName"
        android:maxLength="30" />

    <RadioGroup
        android:id="@+id/addCategoryDialogColorRow1"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/addCategoryDialogColor1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addCategoryDialogColor2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addCategoryDialogColor3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addCategoryDialogColor4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addCategoryDialogColor5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/addCategoryDialogColorRow2"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/addCategoryDialogColor6"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addCategoryDialogColor7"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addCategoryDialogColor8"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addCategoryDialogColor9"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <RadioButton
            android:id="@+id/addCategoryDialogColor10"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/background_color_radio_btn"
            android:buttonTint="@android:color/white"
            android:gravity="center"
            android:scaleX="1.5"
            android:scaleY="1.5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </RadioGroup>

</LinearLayout>