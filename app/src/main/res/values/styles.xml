<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ToolbarColoredIcons" parent="Theme.PracticeTime">
        <item name="android:textColorSecondary">?attr/colorOnBackground</item>
    </style>
    <style name="AppBar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="CollapsingToolbar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">128dp</item>
        <item name="collapsedTitleTextAppearance">@style/ToolbarTitleCollapsed</item>
        <item name="expandedTitleTextAppearance">@style/ToolbarTitleExpanded</item>
        <item name="expandedTitleMarginBottom">28dp</item>
        <item name="expandedTitleMarginStart">16dp</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="titleCollapseMode">scale</item>
    </style>

    <style name="ToolbarTitleCollapsed" parent="">
        <item name="android:textColor">?attr/colorOnSurfaceLowerContrast</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="ToolbarTitleExpanded" parent="">
        <item name="android:textColor">?attr/colorOnSurfaceLowerContrast</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="Toolbar" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="ToggleButtonBase" parent="">
        <item name="android:backgroundTint">@color/bg_color_toggle_button</item>
        <item name="android:textColor">@color/text_color_toggle_button</item>
    </style>
    <style name="ToggleButton" parent="ToggleButtonBase">
        <item name="android:layout_height">44dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ToggleButtonSmall" parent="ToggleButtonBase">
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="CommentDialog" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="colorSecondary">@color/md_yellow_600</item> <!-- // TODO figure out, why the secondary color is not inherited from the theme -->
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="behavior_draggable">false</item>
    </style>
    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/outlined_button</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">?attr/colorOnSurfaceLowerContrast</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="ProgressBarGoalsOverview" parent="">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
        <item name="android:background">@drawable/circular_progress_bar_bg</item>
        <item name="android:max">100</item>
        <item name="android:progress">65</item>
    </style>

    <style name="ImageViewCheckIconGoalsOverview" parent="">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:src">@drawable/ic_check_small</item>
        <item name="android:layout_gravity">center</item>
        <item name="tint">?attr/colorPrimary</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tv_hint_empty_fragment" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">32dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="cardview_statistics_overview" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="heading_about_pages">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="text_about_pages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="text_about_pages_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceLowerContrast</item>
    </style>

    <style name="about_entry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">16dp</item>
        <item name="android:paddingStart">69dp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="about_entry_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">69dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:backgroundTint">?attr/colorOnSurfaceLowerContrast</item>
    </style>

</resources>
